---
const { title, fontSize } = Astro.props;

const frase = title.split(" ");
const primera = frase[0];
frase.shift();
const final = frase.join(" ");

let font = fontSize;
fontSize ? (font = `font-${fontSize}`) : (font = `font-extrabold`);
---

<div class="md:container md:mx-auto p-8 text-center">
  <h1
    class=`text-center mb-4 ${font} tracking-tight leading-none text-gray-900 md:text-4xl lg:text-6xl dark:text-white"
`
  >
    <span
      class="text-transparent bg-clip-text bg-gradient-to-r to-lime-500 from-sky-400"
      >{primera}</span
    >
    {final}
  </h1>
</div>
